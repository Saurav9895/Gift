{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "role": {
          "type": "string",
          "enum": [
            "customer",
            "admin"
          ],
          "description": "The user's role in the system."
        }
      },
      "required": [
        "uid",
        "email",
        "role"
      ]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string"
        },
        "longDescription": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "originalPrice": {
            "type": "number"
        },
        "discountedPrice": {
            "type": "number"
        },
        "quantity": {
            "type": "number"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "category": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "price",
        "imageUrl",
        "category",
        "originalPrice",
        "discountedPrice",
        "quantity",
        "shortDescription",
        "longDescription"
      ]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a product category.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "name",
        "imageUrl"
      ]
    },
    "Review": {
      "title": "Review",
      "description": "Represents a user review for a product.",
      "type": "object",
      "properties": {
        "productId": {
            "type": "string"
        },
        "userId": {
            "type": "string"
        },
        "userName": {
            "type": "string"
        },
        "rating": {
            "type": "number"
        },
        "comment": {
            "type": "string"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": ["productId", "userId", "userName", "rating", "comment", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "email-password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores product information."
    },
    "/products/{productId}/reviews/{reviewId}": {
        "schema": {
            "$ref": "#/entities/Review"
        },
        "description": "Stores reviews for a specific product."
    },
    "/categories/{categoryId}": {
        "schema": {
            "$ref": "#/entities/Category"
        },
        "description": "Stores category information."
    }
  }
}
