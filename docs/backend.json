
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "role": {
          "type": "string",
          "enum": [
            "customer",
            "admin"
          ],
          "description": "The user's role in the system."
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        }
      },
      "required": [
        "uid",
        "email",
        "role"
      ]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the store.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "shortDescription": {
          "type": "string"
        },
        "longDescription": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "originalPrice": {
            "type": "number"
        },
        "discountedPrice": {
            "type": "number"
        },
        "quantity": {
            "type": "number"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "category": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "price",
        "imageUrl",
        "category",
        "originalPrice",
        "discountedPrice",
        "quantity",
        "shortDescription",
        "longDescription"
      ]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a product category.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "name",
        "imageUrl"
      ]
    },
    "Review": {
      "title": "Review",
      "description": "Represents a user review for a product.",
      "type": "object",
      "properties": {
        "productId": {
            "type": "string"
        },
        "userId": {
            "type": "string"
        },
        "userName": {
            "type": "string"
        },
        "rating": {
            "type": "number"
        },
        "comment": {
            "type": "string"
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        }
      },
      "required": ["productId", "userId", "userName", "rating", "comment", "createdAt"]
    },
    "Address": {
      "title": "Address",
      "description": "Represents a user's shipping address.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Recipient's name."
        },
        "homeFloor": {
            "type": "string",
            "description": "House/Flat number, Floor, Building."
        },
        "locality": {
            "type": "string",
            "description": "Locality, Area, Street name."
        },
        "landmark": {
            "type": "string",
            "description": "A nearby landmark."
        },
        "city": {
          "type": "string",
          "description": "City"
        },
        "state": {
          "type": "string",
          "description": "State / Province / Region"
        },
        "postalCode": {
          "type": "string",
          "description": "ZIP / Postal Code"
        },
        "country": {
          "type": "string",
          "description": "Country"
        },
        "phone": {
          "type": "string",
          "description": "Phone number"
        }
      },
      "required": [
        "name",
        "homeFloor",
        "locality",
        "city",
        "state",
        "postalCode",
        "country",
        "phone"
      ]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer order.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "items": { 
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "price": { "type": "number" },
                    "quantity": { "type": "number" },
                    "imageUrl": { "type": "string" }
                },
                "required": ["id", "name", "price", "quantity", "imageUrl"]
            }
        },
        "shippingAddress": { "$ref": "#/entities/Address" },
        "paymentMethod": { "type": "string" },
        "subtotal": { "type": "number" },
        "deliveryFee": { "type": "number" },
        "total": { "type": "number" },
        "status": { "type": "string", "enum": ["Processing", "Shipped", "Out for Delivery", "Delivered", "Canceled"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "items", "shippingAddress", "paymentMethod", "total", "status", "createdAt"]
    },
    "PromoCode": {
        "title": "Promo Code",
        "description": "Represents a promotional code for discounts.",
        "type": "object",
        "properties": {
            "code": { "type": "string" },
            "type": { "type": "string", "enum": ["Percentage", "Fixed", "Free Delivery"] },
            "value": { "type": "number" }
        },
        "required": ["code", "type", "value"]
    },
    "StoreSettings": {
      "title": "Store Settings",
      "description": "Defines the global settings for the store.",
      "type": "object",
      "properties": {
        "featuredProductIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of product IDs to feature on the homepage."
        },
        "featuredCategoryIds": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of category IDs to feature on the homepage."
        },
        "deliveryFee": {
            "type": "number"
        },
        "freeDeliveryThreshold": {
            "type": "number"
        },
        "promoCodes": {
            "type": "array",
            "items": { "$ref": "#/entities/PromoCode" }
        }
      }
    }
  },
  "auth": {
    "providers": [
      "email-password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/addresses/{addressId}": {
        "schema": {
            "$ref": "#/entities/Address"
        },
        "description": "Stores user shipping addresses."
    },
    "/users/{userId}/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores orders for a specific user."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores product information."
    },
    "/products/{productId}/reviews/{reviewId}": {
        "schema": {
            "$ref": "#/entities/Review"
        },
        "description": "Stores reviews for a specific product."
    },
    "/categories/{categoryId}": {
        "schema": {
            "$ref": "#/entities/Category"
        },
        "description": "Stores category information."
    },
    "/site-settings/store": {
        "schema": {
            "$ref": "#/entities/StoreSettings"
        },
        "description": "Stores global settings for the store."
    }
  }
}

    